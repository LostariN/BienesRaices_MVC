
extends ./layout/app

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")
block contenido 

    div(class="py-5")
        h1(class="text-center text-4xl font-extrabold") Ubicacion en el Mapa
        div(class="flex flex-col md:flex-row items-center py-10 gap-4 ")
            h2(class="text-sm uppercase text-gray-800 font-bold") Filtrar Propiedades: 
            div(class="w-full md:w-auto flex items-center gap-4")
                label(for="categorias" class="text-sm w-24 uppercase text-gray-500 font-bold") Categorias
                select(id="categorias" class="bg-white flex-1 hover:border-indigo-500 w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") -Seleccione-
                    each categoria in categorias 
                        option(value= categoria.id)= categoria.nombre
            div(class="w-full md:w-auto flex items-center gap-4")
                label(for="precios" class="text-sm w-24 uppercase text-gray-500 font-bold") Precios
                select(id="precios" class="bg-white hover:border-indigo-500 flex-1 w-full px-3 py-2 border border-gray-300 rounded-md shadow")
                    option(value="") -Seleccione-
                    each precio in precios 
                        option(value= precio.id)= precio.nombre
        div(id="mapa-inicio" class="h-[600px] mt-5")
        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Ultimas Casas en Venta: 
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in casas  
                    include ./templates/cardVenta
        section(class="py-5")
            h2(class="text-center text-4xl font-extrabold pt-10") Ultimos Departamentos en Venta: 
            div(class="grid grid-cols-1 lg:grid-cols-3 gap-5 mt-14")
                each propiedad in depas  
                    include ./templates/cardVenta


        //- pre= JSON.stringify(casas,undefined,2)

   
block scripts 
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="./js/mapaInicio.js") 
