extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 text-center font-extrabold") Bienes
            span(class="font-normal") Raices
        h2(class="text-xl text-center font-extrabold")= pagina

        if errores 
            div(class="max-w-md mx-auto my-10")
                each error in errores
                    p(class="bg-red-600 rounded-lg text-center p-2 mb-1 uppercase text-white text-xs font-bold")= error.msg
                
        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-gray-200 shadow py-8 px-4") 
                form(class="space-y-5" method="POST" action="/auth/login")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Tu Email
                        input(id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu email" type="text" name="email" value= email ? email : '')
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Tu password
                        input(id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu password" type="text" name="password")
                    div(class="flex justify-between") 
                        a(class="text-xs text-gray-500" href="/auth/registro") Registrate si no tienes cuenta.
                        a(class="text-xs text-gray-500" href="/auth/olvide-pass") Olvide mi cuenta.
                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 rounded-md py-3  font-bold cursor-pointer" type="submit" value="Login")