extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 text-center font-extrabold") Bienes
            span(class="font-normal") Raices
        h2(class="text-xl text-center font-extrabold")= pagina

    div(class="bg-white shadow py-8 px-4 rounded-lg max-w-md mx-auto")
        p(class=error ? "bg-red-500":"bg-green-500" class="py-2 px-5 rounded-lg w-full uppercase font-bold text-white text-center")=mensaje

        if !error   
            a(class="text-center font-bold text-sm text-slate-600 uppercase mt-10 block" href="/auth/login") Inicia Sesion.