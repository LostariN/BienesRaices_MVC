header(class="bg-indigo-600 p-4")
    div(class="container mx-auto flex justify-between items-center")
        a(href="/")
            h1(class="text-2xl text-white font-extrabold text-center") Bienes 
                span(class="font-normal") Raices 
        if !usuario
            nav(class="my-5 text-sm font-bold md:flex md:gap-3 md:items-center text-white hidden")
                a(href="/auth/registro" class="") Crear Cuenta
                a(href="/auth/login" class="") Iniciar Sesion

        else
            nav(class="my-5 text-sm font-bold md:flex md:gap-3 md:items-center text-white hidden")
                a(href="/mis-propiedades" class="") Mis Propiedades
                a(href="" class="") Mi perfil
                form(action="/auth/cerrar-sesion" method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    input(type="submit" class="bg-indigo-800 py-2 px-10 rounded-lg" value="Cerrar Sesion") 

div(class="bg-indigo-700 lg:block hidden py-3")
    div(class="container mx-auto flex justify-between")
        nav(class="flex gap-5 items-center")
            a(href="/categorias/1" class="text-sm font-bold uppercase text-white") Casas
            a(href="/categorias/2" class="text-sm font-bold uppercase text-white") Departamentos
            a(href="/categorias/3" class="text-sm font-bold uppercase text-white") Bodegas
            a(href="/categorias/4" class="text-sm font-bold uppercase text-white") Terrenos
            a(href="/categorias/5" class="text-sm font-bold uppercase text-white") Caba√±as
        form(action="/buscador" method="POST" class="flex gap-5 items-center")
            input(type="hidden" name="_csrf" value= csrfToken)
            label(for="termino" class="text-sm uppercase font-bold text-white")
                svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg' fill='none' viewbox='0 0 24 24' stroke-width='1.5' stroke='currentColor')
                    path(stroke-linecap='round' stroke-linejoin='round' d='M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z')

            input(type="text" class="p-2 rounded-lg shadow" id="termino" placeholder="Buscar propiedades" name="termino" required)
            input(type="submit" value="Buscar" class="bg-indigo-800 hover:bg-indigo-400 rounded-lg uppercase font-bold p-2 cursor-pointer text-sm text-white")
            

